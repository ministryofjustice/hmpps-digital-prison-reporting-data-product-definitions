{
  "id": "dpd001-hospital-movements",
  "name": "Hospital Movements ",
  "description": "Data products for Hospital Movements ",
  "metadata": {
    "author": "Zahoor Hussain",
    "owner": "Michael Clarke",
    "version": "1.0.5"
  },
  "datasource": [
    {
      "id": "datamart",
      "name": "datamart"
    }
  ],
  "dataset": [
    {
      "id": "hospital-dataset",
      "name": "hospital-dataset",
      "datasource": "datamart",
      "query": "SELECT prisoners.number AS prison_number, name AS name, movements.time AS date, movements.direction, movements.type, movements.origin, movements.origin_code, movements.destination, movements.destination_code, movements.reason, movements.escort,  movements.comment   FROM datamart.movement_movement as movements  JOIN datamart.prisoner_prisoner as prisoners ON movements.prisoner = prisoners.id where reason_code in ('C5','C6','MED','5','HP')",
      "schema": {
        "field": [
          {
            "name": "prison_number",
            "type": "string",
            "display": ""
          },
          {
            "name": "name",
            "type": "string",
            "display": ""
          },
          {
            "name": "date",
            "type": "date",
            "display": ""
          },
          {
            "name": "type",
            "type": "string",
            "display": ""
          },
          {
            "name": "origin",
            "type": "string",
            "display": ""
          },
          {
            "name": "origin_code",
            "type": "string",
            "display": ""
          },
          {
            "name": "destination",
            "type": "string",
            "display": ""
          },
          {
            "name": "destination_code",
            "type": "string",
            "display": ""
          },
          {
            "name": "direction",
            "type": "string",
            "display": ""
          },
          {
            "name": "reason",
            "type": "string",
            "display": ""
          },
          {
            "name": "escort",
            "type": "string",
            "display": ""
          },
          {
            "name": "comment",
            "type": "string",
            "display": ""
          }
        ]
      }
    }
  ],
  "policy": [
    {
      "id": "caseload",
      "type": "row-level",
      "action": [
        "(origin_code='${caseload}' AND lower(direction)='out') OR (destination_code='${caseload}' AND lower(direction)='in')"
      ],
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "exists": [
                "${caseload}"
              ]
            }
          ]
        }
      ]
    }
  ],
  "report": [
    {
      "id": "hospital-movement-month-mov0027",
      "name": "Hospital Movements (Last month)",
      "description": "Prisoner Movements to/from Hospital in the last month",
      "classification": "list",
      "version": "v1.0",
      "render": "HTML",
      "dataset": "$ref:hospital-dataset",
      "feature": [
        {
          "type": "share"
        },
        {
          "type": "save"
        },
        {
          "type": "email"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:direction",
            "display": "Direction",
            "formula": "",
            "visible": "true",
            "sortable": true,
            "defaultsort": false,
            "filter": {
              "type": "Radio",
              "staticoptions": [
                {
                  "name": "in",
                  "display": "In"
                },
                {
                  "name": "out",
                  "display": "Out"
                }
              ]
            }
          },
          {
            "name": "$ref:date",
            "display": "Date",
            "formula": "",
            "visible": "true",
            "sortable": true,
            "defaultsort": false,
            "filter": {
              "type": "daterange",
              "default": "today(-1,months) - today()"
            }
          },
          {
            "name": "$ref:prison_number",
            "display": "Prisoner Number",
            "formula": "",
            "visible": "true",
            "sortable": true,
            "defaultsort": false
          },
          {
            "name": "$ref:name",
            "display": "Full Name",
            "formula": "make_url('https://prisoner-${env}.digital.prison.service.justice.gov.uk/prisoner/${prison_number}',${name},TRUE)",
            "visible": "true",
            "sortable": true,
            "defaultsort": false
          },
          {
            "name": "$ref:origin",
            "display": "From",
