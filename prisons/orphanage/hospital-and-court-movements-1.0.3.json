{
  "id": "hospital-courts-movements",
  "name": "hospital-and-court-movements",
  "description": "DPD contains report variants for both Hospital & courts Movements",
  "metadata": {
    "author": "me",
    "owner": "Michael Clarke",
    "version": "1.0.3"
  },
  "datasource": [
    {
      "id": "datamart",
      "name": "datamart"
    }
  ],
  "dataset": [
    {
      "id": "movement_movement",
      "name": "movement_movement",
      "datasource": "datamart",
      "query": "SELECT prisoners.number AS prisonNumber,CONCAT(CONCAT(prisoners.lastname, ', '), substring(prisoners.firstname, 1, 1)) AS name,movements.date,movements.direction,movements.type,movements.origin,movements.destination,movements.reason\nFROM datamart.domain.movement_movement as movements\nJOIN datamart.domain.prisoner_prisoner as prisoners\nON movements.prisoner = prisoners.id",
      "schema": {
        "field": [
          {
            "name": "prisonNumber",
            "type": "string",
            "display": "Prison Number"
          },
          {
            "name": "name",
            "type": "string",
            "display": "Full Name"
          },
          {
            "name": "date",
            "type": "date",
            "display": "Date"
          },
          {
            "name": "time",
            "type": "time",
            "display": "Time"
          },
          {
            "name": "origin",
            "type": "string",
            "display": "From"
          },
          {
            "name": "destination",
            "type": "string",
            "display": "To"
          },
          {
            "name": "direction",
            "type": "string",
            "display": "Direction"
          },
          {
            "name": "type",
            "type": "string",
            "display": "Type"
          },
          {
            "name": "reason",
            "type": "string",
            "display": "Reason"
          },
          {
            "name": "origin_code",
            "type": "string",
            "display": ""
          },
          {
            "name": "destination_code",
            "type": "string",
            "display": ""
          }
        ]
      }
    }
  ],
  "policy": [
    {
      "id": "caseload",
      "type": "row-level",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": {
                "fragment": "(origin_code=${caseload} AND direction='OUT') OR (destination_code=${caseload} AND direction='IN')"
              }
            }
          ]
        }
      ]
    }
  ],
  "report": [
    {
      "id": "hospital movement",
      "name": "hospital movement",
      "description": "hospital movement",
      "classification": "hospital movement",
      "version": "v1.0",
      "render": "HTML",
      "dataset": "$ref:movement_movement",
      "specification": {
        "template": "standard-table.njks",
        "field": [
          {
            "name": "$ref:name",
            "display": "",
            "formula": "",
            "visible": true,
            "sortable": true,
            "defaultsort": false
          },
          {
            "name": "$ref:prisonNumber",
            "display": "",
            "formula": "",
            "visible": true,
            "sortable": true,
            "defaultsort": false
          },
          {
            "name": "$ref:date",
            "display": "",
            "formula": "",
            "visible": true,
            "sortable": true,
            "defaultsort": true,
            "filter": {
              "type": "daterange",
              "default": "today(-1,months) - today()"
            }
          },
          {
            "name": "$ref:time",
            "display": "",
            "formula": "",
            "visible": true,
            "sortable": true,
            "defaultsort": false
          },
          {
            "name": "$ref:origin",
            "display": "",
            "formula": "",
            "visible": true,
            "sortable": true,
            "defaultsort": false
          },
          {
            "name": "$ref:destination",
            "display": "",
            "formula": "",
            "visible": true,
            "sortable": true,
            "defaultsort": false
          },
          {
            "name": "$ref:direction",
            "display": "",
            "formula": "",
            "visible": true,
            "sortable": true,
            "defaultsort": false
          },
          {
            "name": "$ref:type",
            "display": "",
            "formula": "",
            "visible": true,
            "sortable": true,
            "defaultsort": false,
            "filter": {
              "type": "Radio",
              "staticoptions": [
                {
                  "name": "CRT",
                  "display": "Court"
                },
                {
                  "name": "HSP",
                  "display": "Hospital"
                }
              ]
            }
          },
          {
            "name": "$ref:reason",
            "display": "",
            "formula": "",
            "visible": true,
            "sortable": true,
            "defaultsort": false
          },
          {
            "name": "$ref:origin_code",
            "display": "",
            "formula": "",
            "visible": false,
            "sortable": false,
            "defaultsort": false
          },
          {
            "name": "$ref:destination_code",
            "display": "",
            "formula": "",
